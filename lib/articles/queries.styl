@media screen and (max-width: 600px)
    .Item
        width calc(100% - 1rem)

@media screen and (max-width: 480px)
    .postDetails
        width 100% !important
        padding 0 1rem 1rem !important
    .Post .postHeader img.postImage
        width 100%
        padding 1rem
    .Post .postHeader .postDetails .title
        margin 0
        padding 0
        text-align center
    .Post .postHeader .postDetails .description
        text-align center
        
@media screen and (max-width: 480px)
    .video-container
        width 100%

    .video-container iframe, .video-container object, .video-container embed
        width 100%
        height 240px
        margin-bottom 1em